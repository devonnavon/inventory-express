extends layout

block content
    h1 #{title}

    form(method='POST' action='')
        div.form-group
            label(for='name') Brand:
            input#name.form-control(type='text', placeholder='Brand (i.e. Noshi)' name='name' value=(undefined===brand ? '' : brand.name))

            label(for='description') Description:
            input#description.form-control(type='text', placeholder='Description (i.e. The best!)' name='description' value=(undefined===brand ? '' : brand.description))
        button.btn.btn-primary(type='submit') Submit

    if errors
        ul
            for error in errors
                li!=error.msg