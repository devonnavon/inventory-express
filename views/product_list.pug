extends layout

block content
  h1= title
  
  ul
    - product_list.sort(function(a, b) {let textA = a.name.toUpperCase(); let textB = b.name.toUpperCase(); return (textA < textB) ? -1 : (textA > textB) ? 1 : 0;});
    each product in product_list
      li 
        a(href=product.url) #{product.name} 
        |  (#{product.brand.name})
        |  (#{product.category.name})

    else
      li There are no products.