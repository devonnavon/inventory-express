extends layout

block content
    h1 #{title}

    form(method='POST' action='')
        div.form-group
            label(for='name') Category:
            input#name.form-control(type='text', placeholder='Category (i.e. Organics)' name='name' value=(undefined===category ? '' : category.name))

            label(for='description') Description:
            input#description.form-control(type='text', placeholder='Description (i.e. So good for you)' name='description' value=(undefined===category ? '' : category.description))
        button.btn.btn-primary(type='submit') Submit

    if errors
        ul
            for error in errors
                li!=error.msg